<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <LinearLayout
        android:id="@+id/receive_planBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/send_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="A"
            android:textSize="12sp"
            android:textColor="#00A8FF"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#BABABA"/>
        <TextView
            android:id="@+id/send_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="[장소] 제목"
            android:textSize="12sp"
            android:textColor="#C8C8C8"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#BABABA"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/send_confirm0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="미확인"
                android:textSize="12sp"
                android:textColor="#B2B2B2" />

            <TextView
                android:id="@+id/send_confirm1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="수락"
                android:textSize="12sp"
                android:textColor="#11D1BE"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/send_confirm2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="거절"
                android:textSize="12sp"
                android:textColor="#FF6B6B"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/send_goPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:saveEnabled="false">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="작성완료"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/green_box"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/go_icon"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/receive_planBox"
        android:background="#BABABA"/>
</RelativeLayout>