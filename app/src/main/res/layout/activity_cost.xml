<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14DAC6">

    <android.support.v7.widget.Toolbar
        android:id="@+id/apply_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:layout_marginTop="12.7dp"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/x_icon_blue"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비용추가"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="105.5dp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="24.5dp"
                    android:layout_marginTop="7.6dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/cost_icon"/>
                <ImageView
                    android:id="@+id/confirm_cost_btn"
                    android:layout_width="30.79dp"
                    android:layout_height="22.4dp"
                    android:src="@drawable/save_btn"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="93.74dp"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/apply_toolBar"
        android:background="@drawable/apply_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_marginTop="6dp"
                    android:layout_width="3.5dp"
                    android:layout_height="18dp"
                    android:background="#63abf3"
                    android:layout_marginLeft="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginTop="3.5dp"
                    android:text="내용"
                    android:textColor="#389eed"
                    android:textSize="15sp" />

            </LinearLayout>
            <EditText
                android:id="@+id/editText_budget_comment"
                android:paddingLeft="20dp"
                android:background="@drawable/comment_border"
                android:layout_width="262dp"
                android:layout_height="29dp"
                android:textSize="13sp"
                android:textColor="#707070"
                android:hint="ex)입장료"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="37dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_marginTop="6dp"
                    android:layout_width="3.5dp"
                    android:layout_height="18dp"
                    android:background="#63abf3"
                    android:layout_marginLeft="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginTop="3.5dp"
                    android:text="비용"
                    android:textColor="#389eed"
                    android:textSize="15sp" />
            </LinearLayout>
            <EditText
                android:id="@+id/editText_budget"
                android:paddingLeft="20dp"
                android:layout_width="156.5dp"
                android:layout_height="29dp"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="17dp"
                android:inputType="numberDecimal"
                android:textSize="13sp"
                android:textColor="#707070"
                android:background="@drawable/comment_border"
                android:hint="ex)10000"
                />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>