<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingBottom="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="22dp"
            android:paddingTop="15dp"
            android:src="@drawable/x_icon_blue" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/travel_maker_home"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="리뷰작성"
            android:textColor="#049ded"
            />
        <TextView
            android:id="@+id/review_finish_btn"
            android:background="#14dac6"
            android:layout_width="55dp"
            android:layout_height="27dp"
            android:text="완료"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="215dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="42dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="별점"
            android:layout_marginTop="15dp"
            android:textColor="#707070"
            />

        <RatingBar
            android:layout_marginLeft="50dp"
            android:id="@+id/expert_ratingBar"
            style="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:isIndicator="false"
            android:max="5"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5" />
    </LinearLayout>

    <EditText
        android:layout_marginTop="20dp"
        android:paddingBottom="200dp"
        android:paddingLeft="23dp"
        android:layout_width="329.5dp"
        android:layout_height="247dp"
        android:background="@drawable/comment_border"
        android:layout_marginLeft="15dp"
        android:hint="리뷰 입력"
        android:textSize="12sp"/>
</LinearLayout>