<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/travel_maker_login" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="64dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="160dp"
        android:text="닉네임 입력"
        android:textColor="#00A8FF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="190dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/nickname_edit"
            android:layout_width="191dp"
            android:layout_height="33dp"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:background="@drawable/nickname_background" />

        <TextView
            android:id="@+id/nickname_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/checknickname"
            android:paddingBottom="3dp"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:paddingTop="3dp"
            android:text="중복확인"
            android:textColor="#14DAC6"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="290dp"
        android:text="여행스타일 선택"
        android:textColor="#00A8FF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="328dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/filter_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="7dp"
            android:text="먹고죽자형"
            android:textColor="#8C8C8C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="@drawable/filter_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="7dp"
            android:text="콜럼버스형"
            android:textColor="#8C8C8C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="@drawable/filter_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="7dp"
            android:text="인생샷형"
            android:textColor="#8C8C8C"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/filter_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="7dp"
            android:text="느긋한 휴양자형"
            android:textColor="#8C8C8C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="@drawable/filter_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="7dp"
            android:text="액티비티형"
            android:textColor="#8C8C8C"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/filter_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="7dp"
            android:text="자린고비형"
            android:textColor="#8C8C8C"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="@drawable/filter_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="7dp"
            android:text="쇼핑형"
            android:textColor="#8C8C8C"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="@drawable/filter_selector"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="7dp"
            android:text="인생샷형"
            android:textColor="#8C8C8C"
            android:textSize="13sp"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/signup_background"
        android:gravity="center"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>