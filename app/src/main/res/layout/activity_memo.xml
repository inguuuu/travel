<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14DAC6"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/apply_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:layout_marginTop="12.7dp"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/x_icon_blue"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메모추가"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="105.5dp"/>
                <ImageView
                    android:layout_width="19.2dp"
                    android:layout_height="20.2dp"
                    android:layout_marginTop="7.6dp"
                    android:layout_marginLeft="3.52dp"
                    android:src="@drawable/memo_icon"/>
                <ImageView
                    android:id="@+id/confirm_memo_btn"
                    android:layout_width="30.79dp"
                    android:layout_height="22.4dp"
                    android:src="@drawable/save_btn"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="93.74dp"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/apply_toolBar"
        android:background="@drawable/apply_border"
        android:orientation="vertical">

        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/board_write_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_margin="10dp"
            android:hint="메모를 입력하세요."
            />



        <ImageView
            android:id="@+id/write_image"
            android:layout_marginLeft="16dp"
            android:layout_width="173dp"
            android:layout_height="183dp"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_image_btn"
            android:src="@drawable/photo_btn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="280dp"
            app:backgroundTint="#049DED"
            />


    </LinearLayout>
</RelativeLayout>