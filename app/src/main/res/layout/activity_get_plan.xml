<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#20DAC7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingBottom="15dp"
                android:paddingEnd="10dp"
                android:paddingStart="22dp"
                android:paddingTop="15dp"
                android:src="@drawable/x_icon_blue" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/travel_maker_home"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <Button
                android:id="@+id/review_btn"
                android:layout_width="55.51dp"
                android:layout_height="22dp"
                android:text="리뷰작성"
                android:textColor="#049DED"
                android:textSize="12sp"
                android:background="@drawable/rounded_send_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#14dac6"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="[베이징] 중국 신청해요!"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="273dp"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"/>

                <TextView
                    android:id="@+id/btnDateFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:text="2018.07.02~2018.07.06"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="더보기"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="37dp">

            <TextView
                android:id="@+id/map_btn"
                android:layout_width="86dp"
                android:layout_height="24dp"
                android:text="지도보기"
                android:textSize="13sp"
                android:background="@drawable/btn_map"
                android:gravity="center"
                android:layout_toRightOf="@+id/schedule_btn"
                android:layout_marginLeft="-11dp"
                android:textColor="#707070"/>

            <TextView
                android:id="@+id/schedule_btn"
                android:layout_width="86dp"
                android:layout_height="24dp"
                android:text="일정보기"
                android:textSize="13sp"
                android:background="@drawable/btn_schedule"
                android:gravity="center"
                android:textColor="#049DED"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/tab_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fl_background">
        </FrameLayout>
    </LinearLayout>



</FrameLayout>