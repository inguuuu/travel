<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14DAC6"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/apply_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:layout_marginTop="12.7dp"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/x_icon_blue"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경로추가"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="105.5dp"/>
                <ImageView
                    android:layout_width="25.8dp"
                    android:layout_height="18.8dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="4.7dp"
                    android:src="@drawable/route_icon"/>
                <ImageView
                    android:id="@+id/confirm_transport_btn"
                    android:layout_width="30.79dp"
                    android:layout_height="22.4dp"
                    android:src="@drawable/save_btn"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="90.22dp"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/apply_toolBar"
        android:background="@drawable/apply_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_marginTop="6dp"
                android:layout_width="3.5dp"
                android:layout_height="18dp"
                android:background="#63abf3"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_marginTop="3.5dp"
                android:layout_marginLeft="7.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간 선택"
                android:textSize="15sp"
                android:textColor="#389eed"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_marginLeft="39dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="출발 시간"
                android:textColor="#707070"/>
            <TextView
                android:layout_marginLeft="101dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="도착 시간"
                android:textColor="#707070"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">
            <EditText
                android:id="@+id/transport_beginTime"
                android:textSize="13sp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="34dp"
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:background="@drawable/comment_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textColor="#049ded"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/transport_endTime"
                android:paddingLeft="10dp"
                android:textSize="13sp"
                android:layout_marginLeft="9dp"
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:background="@drawable/comment_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="46dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_marginTop="6dp"
                android:layout_width="3.5dp"
                android:layout_height="18dp"
                android:background="#63abf3"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_marginTop="3.5dp"
                android:layout_marginLeft="7.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운송수단 선택"
                android:textSize="15sp"
                android:textColor="#389eed"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.5dp"
            android:layout_marginLeft="43.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tab_car_btn"
                android:layout_width="29dp"
                android:layout_height="21dp"
                android:src="@drawable/tab_car"/>

            <ImageView
                android:id="@+id/tab_walk_btn"
                android:layout_marginLeft="26.55dp"
                android:layout_width="13.78dp"
                android:layout_height="21dp"
                android:src="@drawable/tab_walk"/>

            <ImageView
                android:id="@+id/tab_train_btn"
                android:layout_marginLeft="26.22dp"
                android:layout_width="16.63dp"
                android:layout_height="21dp"
                android:src="@drawable/tab_train"/>

            <ImageView
                android:id="@+id/tab_airplane_btn"
                android:layout_marginLeft="26.37dp"
                android:layout_width="21.43dp"
                android:layout_height="21dp"
                android:src="@drawable/tab_airplane"/>

            <ImageView
                android:id="@+id/tab_bicycle_btn"
                android:layout_marginLeft="26.53dp"
                android:layout_width="24.53dp"
                android:layout_height="21dp"
                android:src="@drawable/tab_bicycle"/>
            <ImageView
                android:id="@+id/tab_bus_btn"
                android:layout_marginLeft="26.47dp"
                android:layout_width="36.47dp"
                android:layout_height="21dp"
                android:src="@drawable/tab_bus"/>

        </LinearLayout>
        <EditText
            android:id="@+id/transport_explain"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:background="@drawable/comment_border"
            android:layout_width="294dp"
            android:layout_height="162dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="12.2dp"
            android:textSize="12.5sp"
            android:textColor="#707070"
            android:hint="상세한 이동 경로를 적어주세요.\n ex) 00역 3번출구에서 101번 버스를 타세요."
            android:gravity="top"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:layout_marginTop="6dp"
                    android:layout_width="3.5dp"
                    android:layout_height="18dp"
                    android:background="#63abf3"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_marginTop="3.5dp"
                    android:layout_marginLeft="7.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비용"
                    android:textSize="15sp"
                    android:textColor="#389eed"
                    />

            </LinearLayout>
            <EditText
                android:id="@+id/transport_total"
                android:paddingLeft="12dp"
                android:layout_width="156.5dp"
                android:layout_height="29dp"
                android:background="@drawable/comment_border"
                android:layout_marginLeft="14.5dp"
                android:textSize="13sp"
                android:textColor="#707070"
                android:inputType="numberDecimal"
                android:cursorVisible="false"
                android:hint="ex)10000"/>

            <Spinner
                android:id="@+id/spinner_cost"
                android:layout_marginLeft="5.87dp"
                android:layout_width="wrap_content"
                android:layout_height="29dp"></Spinner>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>